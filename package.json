{
  "name": "amadeus-system-new-alpha",
  "description": "Her.AI Alpha Application inspired by Steins;Gate 0",
  "private": true,
  "version": "0.1.3",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:api": "cd ./service && pnpm build",
    "start:api": "cd ./service && pnpm prod",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:frontend": "vite build",
    "build:node": "cd service && npm install && npm run build",
    "build:electron": "pnpm build && pnpm build:api:electron && electron-builder",
    "start:electron": "pnpm build && pnpm build:api && electron electron/main.mjs"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-scroll-area": "^1.2.0",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@types/node": "^22.7.6",
    "@types/pako": "^2.0.3",
    "@types/react-router-dom": "^5.3.3",
    "axios": "^1.7.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "electron-log": "^5.1.1",
    "electron-updater": "^6.6.2",
    "i18next": "^25.6.3",
    "lucide-react": "^0.453.0",
    "mobx": "^6.13.5",
    "mobx-react": "^9.1.1",
    "mobx-react-lite": "^4.1.0",
    "pako": "^2.1.0",
    "path": "^0.12.7",
    "pixi-live2d-display": "^0.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^16.3.5",
    "react-router-dom": "^6.27.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "vite-plugin-static-copy": "^2.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.2",
    "autoprefixer": "^10.4.20",
    "electron": "^30.0.0",
    "electron-builder": "^23.6.0",
    "eslint": "^9.11.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "globals": "^15.9.0",
    "less": "^4.2.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.8"
  },
  "main": "electron/main.mjs",
  "build": {
    "appId": "com.her.ai",
    "productName": "Amadeus",
    "files": [
      "**/*",
      "!dist"
    ],
    "directories": {
      "buildResources": "electron/build"
    },
    "publish": {
      "provider": "github",
      "repo": "amadeus-system-new",
      "owner": "ai-poet"
    },
    "extraResources": [
      {
        "from": "service/",
        "to": "service",
        "filter": [
          "!node_modules/**",
          "!webrtc/.env"
        ]
      },
      {
        "from": "dist/",
        "to": "dist",
        "filter": [
          "!win-unpacked/**"
        ]
      },
      {
        "from": "electron/build/",
        "to": "icon"
      },
      {
        "from": "electron/loading.html",
        "to": "electron/loading.html"
      }
    ],
    "win": {
      "icon": "electron/build/icon.ico"
    },
    "mac": {
      "icon": "electron/build/icon.icns"
    },
    "linux": {
      "icon": "electron/build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    }
  }
}
